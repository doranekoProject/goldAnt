<!--submit order.wxml-->
<view>
  <view class="add-address">
    <view>
      <view>请添加收货地址</view>
       <view class="add-address_add"></view>
    </view>
  </view>
  <view class="order-info">
    <image class="order-info_img" src="{{list.cover}}"></image>
    <view class="order-info_box">
      <view class="order-info_box--title">{{list.title}}</view>
      <view class="order-info_box--bot">
        <view>￥<text class="order-info_box--cost">{{list.cost}}</text></view>
        <view class="order-info_box--quantity">
          <view class="order-info_box--reduce"></view>
          <input class="order-info_box--input" placeholder-class="placeholder" value="{{quantity}}"></input>
          <view class="order-info_box--add"></view>
        </view>
      </view>
    </view>
  </view>
  <view class="order-other">
    <view class="order-other_item">
      <view class="order-other_item--name">使用余额</view>
      <view class="order-other_item--desc">￥0</view>
    </view>
    <view class="order-other_item order-other_item--active">
      <view class="order-other_item--name">使用积分</view>
      <view class="order-other_item--desc">0</view>
    </view>
    <view class="order-other_item">
      <view class="order-other_item--name">订单备注</view>
      <view class="order-other_item--desc">
        <input placeholder="填写备注信息"></input>
      </view>
    </view>
  </view>
  <view class="order-bot">
    <view class="order-bot_right">
      实付金额：<view class="order-bot_cost">￥288</view>
      <view class="order-bot_btn btn-blue">提交订单</view>
    </view>
  </view>
</view>

