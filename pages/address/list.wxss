.address-wrap {
  padding: 20rpx;
}
.address-list{
  margin-bottom: 20rpx;
  padding: 25rpx;
  height: 300rpx;
  background: #fff;
  color: #545454;
  font-size: 28rpx;
  line-height: 50rpx;
  border-radius: 8rpx;
  font-family: Source Han Sans CN;
}
.address-list .label {
  padding-right: 5rpx;
}
.button-warp {
  display: flex;
  margin-top: 45rpx;
}
.button-warp .flex-item {
  flex-grow: 1; /* default 0 */
}
.button-warp .right {
  text-align: right;
}
.button-warp .right .button {
  display: inline;
  padding-left: 40rpx;
}
.add-button {
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #FE4B11;
  font-size: 28rpx;
  border-radius:8px;
}