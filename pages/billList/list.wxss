/**billList/list.wxss**/
page {
  background: #fff;
}
.bill-list_row {
  position: relative;
  margin: 0 38rpx;
  padding: 40rpx 0 28rpx; 
  color: #262626;
  font-size: 30rpx;
  border-bottom: 1px solid #DBDBDB;
}
.bill-list_row:last-child {
  border: none;
}
.bill-list_row--time {
  margin-top: 20rpx;
  color: #A5A5A5;
  font-size: 22rpx;
}
.bill-list_row--cost {
  position: absolute;
  right: 0;
  font-size: 36rpx;
  color: #000;
  top: 40rpx;
}
.bill-list_row--cost .price{
  color: #FE4B11;
}
.cash-out {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #EFEFF4;
}
.cash-out_box {
  height: 230rpx;
  margin-bottom: 5rpx;
  display: flex;
  background: #fff;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
}
.cash-out_number {
  display: inline-block;
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.cash-out_text {
  color: #A5A5A5;
}
.cash-out_info {
  padding: 84rpx 80rpx;
  font-size: 24rpx;
  background: #fff;
}
.cash-out_info .cash-out_text {
  margin-top: 48rpx;
  margin-bottom: 70rpx;
}
.cash-out_input {
  border-bottom:1px solid rgba(219,219,219,1);
  padding-bottom: 22rpx;
}
.cash-out_input input {
  display: inline-block;
  width: 450rpx;
  font-size: 60rpx;
  font-weight: bold;
  vertical-align: bottom
}
.cash-out_orange {
  width: 500rpx;
  height: 70rpx;
  line-height: 70rpx;
  background: rgba(223,175,16,1);
  border-radius: 10rpx;
  color: #fff;
  text-align: center;
  margin: 48rpx auto 0;
}