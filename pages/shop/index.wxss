/**shop.wxss**/
.shop-sort {
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 28rpx 0;
}
.shop-sort_item {
  flex: 1;
  color: #A5A5A5;
  font-size: 28rpx;
}
.shop-sort_item image {
  width: 125rpx;
  height: 125rpx;
  background: #ACACAC;
  border-radius: 50%;
}
.shop-list {
  margin-top: 10rpx;
  background: #fff;
}
.shop-list_item {
  padding: 20rpx 20rpx 0;
  display: flex;
}
.shop-list_item--img {
  width: 200rpx;
  height: 200rpx;
}
.shop-list_info {
  flex: 1;
  padding-right: 32rpx;
  margin-left: 40rpx;
  font-size: 28rpx;
  color: #FE4B11;
  border-bottom: 1px solid #DBDBDB;
  padding-bottom: 20rpx;
}
.shop-list_item:last-child .shop-list_info{
  border: 0;
}
.shop-list_title {
  color: #262626;
  font-size: 36rpx;
  margin-bottom: 18rpx;
}
.shop-list_desc {
  font-size: 28rpx;
  color: #A5A5A5;
  height: 56rpx;
  overflow: hidden;
}
.shop-list_cost {
  font-size: 38rpx;
}
.shop-list_bot {
  position: relative;
  margin-top: 30rpx;
}
.shop-list_bot--cart {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 47rpx;
  height: 43rpx;
  background: left center / 100% auto url("data:image/png;base64,") no-repeat;
}
.drop-down {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.drop-down_layer {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background:rgba(0,0,0,0.3);
}
.drop-down_box {
  position: fixed;
  left: 0;
  top: 186rpx;
  width: 100%;
  border-top: 1px solid #DBDBDB;
  background: #fff;
  z-index: 2;
  min-height: 506rpx;
  color: #545454;
  font-size: 36rpx;
}
.drop-down_box--active {
  background: #fff;
  color: #FE4B11;
}
.drop-down_col .drop-down_box--col:nth-child(1) {
  background: #F6F6F6;
}
.drop-down_col  {
    display: flex;
}
.drop-down_bot > view {
  margin-top: 32rpx;
}
.drop-down_box--item {
  padding: 20rpx 0;
  margin: 0 38rpx;
  border-bottom: 1px solid #DBDBDB;
}
.drop-down_col .drop-down_box--item {
  padding: 28rpx 38rpx;
  border: 0;
  margin: 0;
} 
.drop-down_bot {
  margin:  0 38rpx;
  font-size: 28rpx;
  color: #A5A5A5;
}
.drop-down_bot--name {
  width: 160rpx;
  display: inline-block;
  vertical-align: middle;
}
.drop-down_bot--item {
  display: inline-block;
  width:108rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #4987D8;
  color: #fff;
  text-align: center;
  font-size: 28rpx;
  margin-left: 16rpx;
  vertical-align: middle;
}
.drop-down_bot--btn {
  background: #4987D8;
  text-align: center;
  height: 92rpx;
  width: 678rpx;
  line-height: 92rpx;
  color: #fff;
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.drop-down_bot--reduce, .drop-down_bot--add {
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  background-repeat: no-repeat;
  background-position: left center;
  background-size: 100% auto;
  vertical-align: middle;
}
.drop-down_bot--input {
  display: inline-block;
  width: 40rpx;
  text-align: center;
  vertical-align: middle;
}
.drop-down_bot--add {
  background-image: url("data:image/png;base64,");
}
.drop-down_bot--reduce {
  background-image: url("data:image/png;base64,");
}