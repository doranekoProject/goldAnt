<!-- 组件模板 -->
<view class="tab-content" class="{{showClass}}">
  <scroll-view bindscrolltoupper="upper" bindscrolltolower="lower" scroll-y="true" class="scroll-view" bindscrolltoupper="upper" bindscrolltolower="lower" style="height:{{listHeight}}px">
    <navigator wx:if="{{type === 'list'}}" class="tab-list" wx:key="index" wx:for="{{infoList}}" url="/pages/infoList/details">
      <image class="tab-img" src="{{item.imgUrl}}"></image>
      <view class="tab-left-info">
        <text class="title">{{item.title}}</text>
        <text class="address">
          {{item.address}}
        </text>
      </view>
    </navigator>
    <view wx:if="{{type === 'ads' && infoList.length > 0}}" class="ads-list" wx:key="index" wx:for="{{infoList}}">
      <navigator  url="/pages/adOrder/details">
        <view class="state">待付款</view>
        <view class="ads-wrap">
          <image class="tab-img" src="{{item.imgUrl}}"></image>
          <view class="tab-left-info">
            <text class="title">北欧现代简约餐厅吊灯创意三头 餐厅灯具</text>
            <view class="price-wrap">
              共计10件商品  合计：<text class="price">￥6.50</text>
            </view>
          </view>
        </view>
      </navigator>
      <view class="button-warp">
        <button bindtap="onTap" class="button">待付款</button>
      </view>
    </view>
    <view wx:if="{{type === 'ads' && infoList.length <1}}" class="no-data"> 亲，你还没有相关订单哟！ </view>
  </scroll-view>
  
</view>